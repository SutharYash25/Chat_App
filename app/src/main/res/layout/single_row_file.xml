<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_row_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    android:padding="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_logo_1_id"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:src="@drawable/profile_1" />

        <TextView
            android:id="@+id/yash_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/profile_logo_1_id"
            android:text="Yash"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hii_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yash_id"
            android:layout_marginLeft="20sp"
            android:layout_toRightOf="@id/profile_logo_1_id"
            android:text="Hi"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>