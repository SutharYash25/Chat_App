<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_photo_id"
        android:layout_width="120sp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/chatlogo"
        app:civ_border_color="@color/black"/>

    <TextView
        android:id="@+id/change_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Change Profile"
        android:textColor="@color/black"
        android:textSize="15dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:gravity="start"
        android:text="Profile"
        android:layout_marginTop="20dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/edite_profile_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="40dp"
        android:padding="15dp"
        android:text="Edit Profile"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:drawableLeftCompat="@drawable/baseline_person_24"
        app:drawableRightCompat="@drawable/baseline_arrow_forward_ios_24" />



    <TextView
        android:id="@+id/edit_phonenumber_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="40dp"
        android:padding="15dp"
        android:text="Phone Number"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:inputType="number"
        app:drawableLeftCompat="@drawable/baseline_call_24"
        app:drawableRightCompat="@drawable/baseline_arrow_forward_ios_24" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:gravity="start"
        android:text="Other"
        android:textSize="15sp" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/baseline_notifications_24"
        android:drawablePadding="40dp"
        android:padding="15dp"
        android:thumbTint="#125DF3"
        android:text="Notification"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/log_out_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="40dp"
        android:padding="15dp"
        android:text="Log out"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:drawableLeftCompat="@drawable/baseline_logout_24"
        app:drawableRightCompat="@drawable/baseline_arrow_forward_ios_24" />





</LinearLayout>

